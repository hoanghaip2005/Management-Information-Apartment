<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/primary_color">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thông báo"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_dialog_email"
            android:tint="#FFFFFF" />

    </LinearLayout>

    <!-- Filter Tabs -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="8dp">

        <TextView
            android:id="@+id/tab_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tất cả"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="@color/primary_color"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/tab_unread"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Chưa đọc (3)"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="#E0E0E0"
            android:textColor="#666666"
            android:layout_margin="4dp" />

        <TextView
            android:id="@+id/tab_important"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quan trọng"
            android:textAlignment="center"
            android:padding="12dp"
            android:background="#E0E0E0"
            android:textColor="#666666"
            android:layout_margin="4dp" />

    </LinearLayout>

    <!-- Notifications List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Emergency Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_light_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFE5E5"
                        android:padding="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KHẨN CẤP"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#E74C3C" />

                    </LinearLayout>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@color/primary_color"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="5 phút trước"
                        android:textSize="12sp"
                        android:textColor="#7F8C8D" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông báo cắt điện khẩn cấp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khu vực tầng 15-20 sẽ bị cắt điện từ 14:00-16:00 hôm nay để sửa chữa hệ thống điện. Vui lòng chuẩn bị trước."
                    android:textSize="14sp"
                    android:textColor="#34495E"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Maintenance Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_light_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#FFF3E0"
                        android:padding="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BẢO TRÌ"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#F39C12" />

                    </LinearLayout>

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@color/primary_color"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="2 giờ trước"
                        android:textSize="12sp"
                        android:textColor="#7F8C8D" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch bảo trì thang máy định kỳ"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thang máy số 2 sẽ được bảo trì từ 9:00-11:00 ngày mai. Vui lòng sử dụng thang máy số 1 hoặc cầu thang bộ."
                    android:textSize="14sp"
                    android:textColor="#34495E"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Payment Notification -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/card_light_background"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:alpha="0.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="#E8F5E8"
                        android:padding="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="THANH TOÁN"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:textColor="#27AE60" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="1 ngày trước"
                        android:textSize="12sp"
                        android:textColor="#7F8C8D" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán thành công"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phí quản lý tháng 12/2024 đã được thanh toán thành công. Cảm ơn bạn!"
                    android:textSize="14sp"
                    android:textColor="#34495E"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
